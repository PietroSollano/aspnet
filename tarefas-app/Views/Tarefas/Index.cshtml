<h1>Thomem</h1>

<p>
    <a href="@Url.Action("Create", "Tarefas")" class="btn btn-primary">Adicionar Nova Tarefa</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>cavalo</th>
            <th>Título</th>
            <th>Descrição</th>
            <th>Data de Criação</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarefa in Model)
        {
            <tr>
                <td>@tarefa.Id</td>
                <td>@tarefa.Titulo</td>
                <td>@tarefa.Descricao</td>
                <td>@tarefa.DataCriacao.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("Edit", "Tarefas", new { id = tarefa.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", "Tarefas", new { id = tarefa.Id })" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>